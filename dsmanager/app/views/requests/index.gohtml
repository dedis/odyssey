{{ define "title" }}{{.Title}}{{ end }}
{{ define "content" }}

<div class="pure-g">
    <div class="pure-u-1 pure-u-sm-1-4"><p></p></div>
    <div class="pure-u-1 pure-u-sm-1-2">
    
        <h1>List of Requests</h1>

        <p><a class="pure-button" href="/">🔙 Back to 🏠</a></p>

        <p>Hello there</p>
        <table class="pure-table pure-table-horizontal requests">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Status</th>
                    <th>Title</th>
                    <th>ID</th>
                    <th>Index</th>
                    <th>Started at</th>
                </tr>
            </thead>
            <tbody>
            {{ range $i, $d := .Requests }}
                <tr>
                    <td><a class="pure-button pure-button-primary" href="/requests/{{.Index}}">See</a></td>
                    <td>{{.Status}}</td>
                    <td>{{.Description}}</td>
                    <td>{{.ID}}</td>
                    <td>{{.Index}}</td>
                    <td>{{.StartD}}</td>
                </tr>
            {{ end }}
            </tbody>
        </table>
    </div>
    <div class="pure-u-1 pure-u-sm-1-4"><p></p></div>

</div>

<style>
  table.requests {
    width: 100%;
  }
</style>

{{ end }}